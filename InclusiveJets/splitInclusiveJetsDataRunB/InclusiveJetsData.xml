<!DOCTYPE JobConfiguration PUBLIC "" "JobConfig.dtd">[
       <!ENTITY DATA_JetHT2017B SYSTEM "/nfs/dust/cms/user/gunnep/HiggsAnalysisUHH_102/CMSSW_10_2_11/src/UHH2/InclusiveJets/config/DATA_JetHT2017B.xml">
